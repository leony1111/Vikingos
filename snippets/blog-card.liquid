<div class="{{classes}} py-5">
    {% assign mod = forloop.index | modulo: 2 %}
    {% if imagePosition == 'top' or  mod == 0 %}
        <a href="{{ article.url }}">        
            <img src="{{ article.image | image_url: width: 780 }}" alt="{{ article.title}}" loading="lazy" class="w-full h-full md:max-w-[800px] md:max-h-[400px] object-cover rounded mb-8">
        </a>
    {% endif %}
    <p class="text-small mb-4 text-brand-red uppercase">{{ blog.title }}</p>
    <h3 class="text-3xl text-black font-Noto font-semibold mb-7"><a href="{{ article.title }}">{{ article.title }}</a></h3>
    <div class="font-normal font-DMSans text-[14px] mb-8">{{ article.content | truncatewords: 19, '...' }}</div>
    {% unless imagePosition == 'top' or mod == 0 %}
        <a href="{{ article.url }}">        
            <img src="{{ article.image | image_url: width: 780 }}" alt="{{ article.title}}" loading="lazy" class="w-full h-full md:max-w-[800px] md:max-h-[400px] object-cover rounded mb-8">
        </a>
    {% endunless %}
    <a href="{{ article.url }}" class="max-w-[250px] hover:bg-brand-red text-center text-white bg-black py-4 px-6 items-center uppercase block my-6 w-[50%] flex justify-between">
        <span>{{ 'blogs.article.read_more' | t }}</span>
        <span><svg xmlns="http://www.w3.org/2000/svg" width="8" height="14" viewBox="0 0 8 14" fill="none">
            <path d="M-5.24537e-07 12L5 7L-8.74228e-08 2L1 -3.0598e-07L8 7L0.999999 14L-5.24537e-07 12Z" fill="white"/>
            </svg>
        </span>
    </a>
</div>