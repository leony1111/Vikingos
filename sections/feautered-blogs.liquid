{% assign posts = blogs.news.articles %}
{% assign post1 = posts[0] %}
{% assign post2 = posts[1] %}

<div class="container py-12">
    <div class="block md:flex items-center gap-12">
        <div class="basis-full md:basis-2/3">
            <p class="text-small mb-4 text-brand-red">{{ blogs.kitchen-appliances.title }}</p>
            <h3 class="text-3xl text-black font-Noto font-semibold mb-7">{{ post1.title }}</h3>
            <div class="font-normal font-DMSans text-[14px] mb-8">{{ post1.content | truncatewords: 19, '...' }}</div>
            <img
                src="{{ post1.image | image_url: width: 780 }}"
                alt="{{ post1.title}}"
                loading="lazy"
                class="w-full h-full md:max-w-[800px] md:max-h-[400px] object-cover">
            <a href="{{ post1.url }}" class="max-w-[250px] text-center text-white bg-black py-4 px-6 items-center uppercase block my-6 w-[50%] flex justify-between">
                <span>{{ 'blogs.article.read_more' | t }}</span>
                <span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="8"
                        height="14"
                        viewBox="0 0 8 14"
                        fill="none">
                        <path d="M-5.24537e-07 12L5 7L-8.74228e-08 2L1 -3.0598e-07L8 7L0.999999 14L-5.24537e-07 12Z" fill="white" />
                    </svg>
                </span>
            </a>
        </div>
        <div class="basis-full md:basis-1/3">
            <img
                src="{{ post2.image | image_url: width: 780 }}"
                alt="{{ post2.title}}"
                loading="lazy">
            <p class="text-small mb-4 text-brand-red">{{ blogs.kitchen-appliances.title }}</p>
            <h3 class="text-3xl text-black font-Noto font-semibold mb-7">{{ post2.title }}</h3>
            <div class="font-normal font-DMSans text-[14px] mb-8">{{ post2.content | truncatewords: 19, '...' }}</div>
            <a href="{{ post2.url }}" class="max-w-[250px] text-center text-white bg-black py-4 px-6 items-center uppercase block my-6 w-[50%] flex justify-between">
                <span>{{ 'blogs.article.read_more' | t }}</span>
                <span>
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="8"
                        height="14"
                        viewBox="0 0 8 14"
                        fill="none">
                        <path d="M-5.24537e-07 12L5 7L-8.74228e-08 2L1 -3.0598e-07L8 7L0.999999 14L-5.24537e-07 12Z" fill="white" />
                    </svg>
                </span>
            </a>
        </div>
    </div>
</div>

{% schema %}
    {
        "name": "Blogs Featured",
        "class": "section-news",
        "presets": [
            {
                "name": "Featured Posts"
            }
        ]
    }
{% endschema %}