<div class="bg-[#F6F4ED] py-[30px] md:py-[70px]">
    <div class="container max-w-[90rem]">
        <div class="flex items-center gap-5 flex-wrap md:!flex-nowrap">
            {% for block in section.blocks %}
                <div class="flex items-center basis-full md:basis-1/3 gap-4">
                    <img src="{{ block.settings.image | image_url: width: 100, height: 100 }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" alt="Icon Image" class="basis-1/2" loading="lazy">
                    <div class="basis-initial">
                        <h3 class="text-brand-red text-2xl">{{ block.settings.title }}</h3>
                        <p class="text-base text-xl">{{ block.settings.description }}</p>
                    </div>
    
                </div>
            {% endfor %}
        </div>
    </div>    
</div>

{% schema %}
{
  "name": "Icons Description",
  "blocks": [
    {
      "name": "Icon",
      "type": "icons",
      "settings": [
        {
          "id": "image",
          "type": "image_picker",
          "label": "Choose image"
        },
        {
          "id": "title",
          "type": "text",
          "label": "Title"
        },
        {
          "id": "description",
          "type": "textarea",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icons Description"
    }
  ]
}
{% endschema %}