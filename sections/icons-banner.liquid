{{ 'main-banner.css' | asset_url | stylesheet_tag }}

<section class="icons-banner" style="background-color:{{ section.settings.color_body }}">
    {% for block in section.blocks %}
        <div class="icons-banner-bubble">
            <div class="icons-banner-img">
                <img src="{{ block.settings.image | img_url: full }}" alt="">
            </div>
            <div class="icons-banner-content">
                <h5>{{ block.settings.title }}</h5>
                <p>{{ block.settings.text }} </p>
            </div>
        </div>
    {% endfor %}
</section>

{% schema %}
    {
        "name": "Icons Banner",
        "class": "section-icons-banner vk-icons-banner",
        "settings": [
            {
                "type": "color",
                "id": "color_body",
                "label": "Background Color"
            }
        ],
        "blocks":[
            {
            "name": "Bubbles",
            "type": "home",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title"
                },
                {
                    "type": "textarea",
                    "id": "text",
                    "label": "Text"
                }
            ]
            }
        ],
        "presets": [
        {
            "name": "Icons Banner",
            "category": "Text"
        }
        ]
    }
{% endschema %}